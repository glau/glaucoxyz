<!doctype html>
<html lang="{{ locale }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/bundle.css">
    <link rel="stylesheet" href="https://use.typekit.net/jah3ebf.css">
    <script src="https://alceris.com/script.js" data-id="f4da3494a50ca3f9" async defer></script>
  </head>
  <body>
    <div class="bg"></div>
    <main class="container">
      {{ content | safe }}
    </main>

    <footer class="container">
      <p>
        {{ languages[page.lang].siteBuiltWith }} <a href="https://11ty.dev">Eleventy</a> {{ languages[page.lang].siteSchedule }} <a href="https://nesslabs.com/digital-garden-set-up">{{ languages[page.lang].digitalGarden}}</a>.
      </p>
      
      <p>
      {{ languages[page.lang].availableText }}
        {% for link in page.url | locale_links %} {%- if not loop.first %}/{% endif %}
        <a href="{{ link.url }}" lang="{{ link.lang }}" hreflang="{{ link.lang }}">{{
          link.label
        }}</a>
        {% endfor %}
      </p>
    </footer>
  </body>
</html>